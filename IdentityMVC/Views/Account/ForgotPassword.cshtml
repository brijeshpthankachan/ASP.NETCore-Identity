@model ForgotPasswordViewModel

<form method="post" asp-controller="Account"  asp-action="ForgotPassword">
    <div class="row bg-light mx-5 mt-5 justify-content-center py-5">
        <div asp-validation-summary="All" class="text-danger col-md-8 p-0"></div>
        <div class="col-md-8">
            <h1 class="text-info">Forgot Password</h1>
            <hr />
            <label asp-for="Email" class="form-label">Email Address</label>
            <input asp-for="Email" class="form-control" />
        </div>

        <div class="col-md-8 pt-3">
            <button type="submit" class="btn btn-primary w-100">Reset Password</button>
        </div>
    </div>
</form>