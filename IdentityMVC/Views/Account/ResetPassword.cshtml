@model ResetPasswordViewModel

<div class="bg-light p-5 mt-5">
    <h1 class="text-info">Reset Password</h1>
    <form asp-controller="Account" asp-action="ResetPassword" method="post" role="form" class="mt-3">
        <h4>Create new password</h4>
        <hr class="col-md-10"/>

        <input asp-for="Code" hidden/>
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group pt-2">
            <label asp-for="Email" class="col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group pt-2">
            <label asp-for="Password" class="col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group pt-2">
            <label asp-for="ConfirmPassword" class="col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="ConfirmPassword" class="form-control"/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-10 bg-danger mt-2">
            <button class="btn btn-primary w-100">Reset</button>
        </div>

    </form>
</div>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}